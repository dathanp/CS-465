<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css">
</head>
<body>
    {{> header}}
    <div id="background">
        <div id="page">
            <div id="contents">
                <div class="box">
                    <div>
                        <div id="news" class="body">
                            <div class="sidebar">
                                <h3>Latest News</h3>
                                <ul>
                                    {{#each latestNews}}
                                    <li>
                                        <a href="{{url}}">{{title}}</a>
                                    </li>
                                    {{/each}}
                                </ul>
                                <h3>Vacation Tips</h3>
                                <ul>
                                    {{#each vacationTips}}
                                    <li>
                                        <a href="{{url}}">{{title}}</a>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                            <div>
                                <h1>{{newsTitle}}</h1>
                                <img src="images/{{image}}" alt="Img">
                                <h2>{{headline}}</h2>
                                <span class="time">{{date}}<br> by: {{author}}</span>
                                <p>{{{content1}}}</p>
                                <p>{{{content2}}}</p>
                                <p>{{{content3}}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{> footer}}
    </div>
</body>
</html>
